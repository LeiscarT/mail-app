<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailApp.Views.AddMailPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="link.png" Command="{Binding LoadPhotoCommand}"></ToolbarItem>
        <ToolbarItem IconImageSource="send.png" Command="{Binding AddCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" Padding="20">
            <Entry Text="{Binding Title}" Placeholder="Title" TextColor="Black"></Entry>
            <Entry Text="{Binding Description}" Placeholder="Description" TextColor="Black"></Entry>
            <Entry Text="{Binding From}" Placeholder="From" TextColor="Black"></Entry>
            <Image Source="{Binding PhotoPath}" Margin="50"></Image>
          
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 